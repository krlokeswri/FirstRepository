<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".Drop">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/TapImage"
        android:layout_width="143dp"
        android:layout_height="180dp"
        android:layout_marginLeft="75dp"
        android:layout_gravity="left|center"
        android:src="@drawable/meter_tap"/>

    <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:id="@+id/flipperid"
            android:layout_centerInParent="true"
            android:flipInterval="1000"
            android:elevation="3dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/dorp_1"
            android:src="@drawable/drop2"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_gravity="center"
            android:layout_height="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/dorp_2"
            android:src="@drawable/drop2"/>
    </ViewFlipper>
    <ImageView
        android:id="@+id/bowlimage"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="bottom|center"
        android:src="@drawable/bowl_300" />
    </FrameLayout>

        <Button
            android:id="@+id/btnmove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Start Moving" />



</LinearLayout>